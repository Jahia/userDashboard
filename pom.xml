<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.jahia.modules</groupId>
    <artifactId>jahia-modules</artifactId>
    <version>7.0.0.0-SNAPSHOT</version>
  </parent>
  <artifactId>userDashboard</artifactId>
  <packaging>bundle</packaging>
  <name>Jahia User Dashboards</name>
  <description>User Dashboards</description>
  <scm>
    <connection>scm:svn:https://devtools.jahia.com/svn/jahia/trunk/modules/userDashboard</connection>
    <developerConnection>scm:svn:https://devtools.jahia.com/svn/jahia/trunk/modules/userDashboard</developerConnection>
    <url>https://devtools.jahia.com/svn/jahia/trunk/modules/userDashboard</url>
  </scm>
  <repositories>
    <repository>
      <releases>
        <enabled>true</enabled>
        <updatePolicy>never</updatePolicy>
      </releases>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
      <id>jahia-public</id>
      <name>Jahia Public Repository</name>
      <url>https://devtools.jahia.com/nexus/content/groups/public</url>
    </repository>
  </repositories>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <extensions>true</extensions>
        <configuration>
          <instructions>
            <Import-Package>${jahia.plugin.projectPackageImport},*</Import-Package>
            <Jahia-Deploy-On-Site>system</Jahia-Deploy-On-Site>
            <Jahia-Depends>default,contentRetrieval</Jahia-Depends>
          </instructions>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
