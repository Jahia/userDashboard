<?xml version="1.0" encoding="UTF-8"?>
<content xmlns:j="http://www.jahia.org/jahia/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0">
    <modules jcr:primaryType="jnt:modules">
        <userDashboard j:dependencies="default"
                       j:installedModules="userDashboard"
                       j:moduleType="module"
                       j:title="Jahia User Dashboard"
                       jcr:primaryType="jnt:module">
                
            <templates j:rootTemplatePath="/" jcr:primaryType="jnt:templatesFolder">
                <contents jcr:primaryType="jnt:contentFolder"/>
                <dashboard-modules-base j:view="dashboard"
                                        jcr:mixinTypes="jmix:useUILocale"
                                        jcr:primaryType="jnt:template">
                    <!--<me j:applyOn="jnt:user"
                        j:defaultTemplate="false"
                        j:hiddenTemplate="false"
                        j:titleKey="mySettings.about"
                        jcr:mixinTypes="jmix:rbTitle"
                        jcr:primaryType="jnt:contentTemplate">
                        <pagecontent jcr:primaryType="jnt:contentList">
                            <about-user jcr:primaryType="jnt:aboutUserDashboard"/>
                        </pagecontent>
                    </me>-->
                    <pages j:applyOn="jnt:user"
                           j:defaultTemplate="false"
                           j:hiddenTemplate="false"
                           j:titleKey="system.myPages"
                           jcr:mixinTypes="jmix:rbTitle"
                           jcr:primaryType="jnt:contentTemplate">
                        <pagecontent jcr:primaryType="jnt:contentList">
                                <my-pages j:criteria="jcr:created"
                                          j:sortDirection="asc"
                                          j:type="jnt:page"
                                          j:view="bootstrapUserContent"
                                          jcr:mixinTypes="jmix:renderable"
                                          jcr:primaryType="jnt:userContentRetrieval"/>
                        </pagecontent>
                    </pages>
                    <web-projects j:applyOn="jnt:user"
                                j:defaultTemplate="false"
                                j:hiddenTemplate="false"
                                j:titleKey="system.myWebProjects"
                                jcr:mixinTypes="jmix:rbTitle"
                                jcr:primaryType="jnt:contentTemplate">
                        <pagecontent j:id="user-sites"
                                     jcr:mixinTypes="jmix:customSkin"
                                     jcr:primaryType="jnt:contentList">
                                    <websites-list-in-live-mode administrationlink="false"
                                                    contribute="true"
                                                    delete="false"
                                                    details="false"
                                                            edit="true"
                                                    editproperties="false"
                                                    export="false"
                                                            j:view="bootstrapSites"
                                                            j:contextNodePath="/sites"
                                                            j:invertCondition="true"
                                                            j:requireLoggedUser="false"
                                                            j:requirePrivilegedUser="false"
                                                            j:requiredPermissionNames="jcr:read_default"
                                                            jcr:mixinTypes="jmix:renderable jmix:requiredPermissions"
                                                            jcr:primaryType="jnt:listSites"
                                                            live="true"
                                                            preview="true"/>
                            <workspaceDispatcher-edit j:contextNodePath="/sites"
                                                      j:invertCondition="false"
                                                          j:requireLoggedUser="false"
                                                          j:requirePrivilegedUser="false"
                                                          j:requiredPermissionNames="jcr:read_default"
                                                          jcr:mixinTypes="jmix:requiredPermissions"
                                                          jcr:primaryType="jnt:workspaceSwitch"
                                                          workspace="default">
                                    <websites-list-in-edit-mode administrationlink="false"
                                                    contribute="true"
                                                    delete="false"
                                                    details="false"
                                                            edit="true"
                                                    editproperties="false"
                                                    export="false"
                                                            j:view="bootstrapSites"
                                                            jcr:mixinTypes="jmix:renderable"
                                                            jcr:primaryType="jnt:listSites"
                                                            live="true"
                                                            preview="true"/>
                            </workspaceDispatcher-edit>
                        </pagecontent>
                    </web-projects>
                    <me j:applyOn="jnt:user"
                           j:defaultTemplate="false"
                           j:hiddenTemplate="false"
                           j:titleKey="system.mySettings"
                           jcr:mixinTypes="jmix:rbTitle"
                           jcr:primaryType="jnt:contentTemplate">
                        <pagecontent jcr:primaryType="jnt:contentList">
                            <editDetails age="true"
                                         j:about="true"
                                         j:birthDate="true"
                                         j:email="true"
                                         j:facebookID="true"
                                         j:firstName="true"
                                         j:function="true"
                                         j:gender="true"
                                         j:lastName="true"
                                         j:linkedinID="true"
                                         j:organization="true"
                                         j:picture="true"
                                         j:skypeID="true"
                                         j:title="true"
                                         j:twitterID="true"
                                         j:view="bootstrap"
                                         jcr:mixinTypes="jmix:renderable jmix:useUILocale"
                                         jcr:primaryType="jnt:editUserDetails"
                                         password="true"
                                         preferredLanguage="true"/>
                        </pagecontent>
                    </me>
                </dashboard-modules-base>
            </templates>
                
                <portlets jcr:primaryType="jnt:portletFolder"/>
                <files jcr:primaryType="jnt:folder"/>
                <contents jcr:primaryType="jnt:contentFolder"/>
        </userDashboard>
    </modules>
</content>
